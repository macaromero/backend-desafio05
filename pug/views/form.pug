extends index.pug

block form
    div(class="container mt-5")
        div(class="row justify-content-center")
            h1(class="text-center") Ingres√° el producto
    div(class="container mt-5")
        div(class="row justify-content-center mb-4")
            div(class="col-6 text-end")
                a(class="btn btn-secondary rounded-0" href="/productos") Ver todos los productos
        div(class="row justify-content-center")
            div(class="col-6 mt-3")
                form(action="/productos" method="POST")
                    div(class="mb-3")
                        label(for="title" class="form-label") Nombre del producto
                        input(class="form-control" id="title" name="title")
                    div(class="mb-3")
                        label(for="price" class="form-label") Precio
                        input(class="form-control" type="number" id="price" name="price")
                    div(class="mb-3")
                        label(for="thumbnail" class="form-label") Url de la imagen
                        input(class="form-control" id="thumbnail" name="thumbnail")
                    button(type="submit" class="btn btn-primary w-100 mt-2 rounded-0") Enviar